<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--TODO: resize drag view to content sizes-->

    <Transition
        app:constraintSetStart="@id/weatherElapsed"
        app:constraintSetEnd="@id/weatherCollapsed"
        app:duration="300">

        <OnSwipe
            app:onTouchUp="autoComplete"
            app:dragDirection="dragStart"
            app:touchRegionId="@id/dragView"
            app:touchAnchorId="@id/dragView"/>

    </Transition>

    <!--
    android:layout_width="200dp"
    android:layout_height="300dp"
    -->

    <ConstraintSet
        android:id="@+id/weatherElapsed">

        <Constraint
            android:id="@+id/dragView"
            android:elevation="10dp">
            <Layout
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintHeight_percent="0.5"

                />
            <Transform
                android:elevation="10dp"/>
        </Constraint>

        <Constraint
            android:id="@+id/contentFragment">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <Transform
                android:scaleX="1"
                android:scaleY="1"
                android:rotationY="0"/>
        </Constraint>

        <Constraint
            android:id="@+id/shadowMock">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <Transform
                android:scaleX="1"
                android:scaleY="1"
                android:rotationY="0"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/weatherCollapsed"
        app:deriveConstraintsFrom="@+id/weatherElapsed">
        <Constraint
            android:id="@+id/dragView">
            <Layout
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintHeight_percent="0.7" />
            <Transform
                android:elevation="25dp" />
        </Constraint>

        <Constraint
            android:id="@+id/contentFragment">
            <Layout
                app:layout_constraintWidth_percent="0.99"
                app:layout_constraintHeight_percent="0.99"/>
            <Transform
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:rotationY="-10"/>
        </Constraint>

        <Constraint
            android:id="@+id/shadowMock">
            <Layout
                app:layout_constraintWidth_percent="0.99"
                app:layout_constraintHeight_percent="0.99"/>
            <Transform
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:rotationY="-10"/>
        </Constraint>

    </ConstraintSet>

</MotionScene>